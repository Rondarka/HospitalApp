        <Label Content="Время приема (мин)" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" Margin="0,314,0,0" x:Name="timePriem"/>

    </Grid>
</Window>
