        xmlns:local="clr-namespace:HospitalApp"
        mc:Ignorable="d"
        Title="Формирование записи на прием" Height="433.644" Width="322.538">
    <Grid>
        <Label Content="Дата" HorizontalAlignment="Left" Margin="41,118,0,0" VerticalAlignment="Top"/>
        <Label Content="Начало интервала (мин)" HorizontalAlignment="Center" Margin="0,159,0,0" VerticalAlignment="Top"/>
        <Label Content="Окончание интервала (мин)" HorizontalAlignment="Center" Margin="0,219,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" Margin="0,250,0,0" x:Name="IntrevalEnd"/>
        <TextBox HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" Margin="0,191,0,0" x:Name="IntervalStart"/>
